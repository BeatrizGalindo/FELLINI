<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to movies_path, class: "navbar-brand" do %>
    <div class="d-flex align-items-center">
      <h1 style="color:#d8d8d8; font-size:42px; margin:0px; letter-spacing: 4px; margin-right:5px;"> FELLINI</h1>
      <%= image_tag "ocho-y-medio.png" %>
    </div>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "My watchlist", movie_selections_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Recommendations", "#", data:{toggle: "modal", target: "#exampleModal"}, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My friends", "http://gph.is/2uoaGww", target:"_blank", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">

          <div class="dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
            <%= image_tag "https://www.italymagazine.com/sites/default/files/story/fellini.jpg", class: "avatar" %>
          </div>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My profile", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>

  </div>

</div>


<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">

<!-- TINDER -->

        <div class="tinder">
          <div class="tinder--status">
            <i class="fa fa-remove"></i>
            <i class="fa fa-heart"></i>
          </div>

          <div class="tinder--cards">
            <div class="tinder--card">
              <img src="<%= image_tag @movie.poster, alt: "", class: "movie-poster-show" %>">
              <h3><%= @movie.title %></h3>
              <p><%= @movie.description %></p>
            </div>
            <div class="tinder--card">
              <img src="https://placeimg.com/600/300/animals">
              <h3><%= @movie.title %></h3>
              <p><%= @movie.description %></p>
            </div>
            <div class="tinder--card">
              <img src="https://placeimg.com/600/300/nature">
              <h3><%= @movie.title %></h3>
              <p><%= @movie.description %></p>
            </div>
            <div class="tinder--card">
              <img src="https://placeimg.com/600/300/tech">
              <h3><%= @movie.title %></h3>
              <p><%= @movie.description %></p>
            </div>
            <div class="tinder--card">
              <img src="https://placeimg.com/600/300/arch">
              <h3><%= @movie.title %></h3>
              <p><%= @movie.description %></p>
            </div>
          </div>

          <div class="tinder--buttons">
            <button id="nope"><i class="fa fa-times"></i></button>
            <button id="love"><i class="fas fa-eye"></i></button>
          </div>
        </div>

<!-- END TINDER -->
      </div>
    </div>
  </div>
</div>
