<div class="container">
  <div class="search-bar-header">
        <h1>Find fellow movie lovers...</h1>

          <div>
            <%= form_tag users_path, method: :get do %>
              <div class="search-bar d-flex" id="user-search">
                <%= text_field_tag :query,
                  params[:query],
                  class: "user-form-control" %>
                <%= submit_tag "Search", class: "btn ml-3 active-tab" %>
              </div>
            <% end %>
          </div>

      </div>


  <div class="user-list d-flex">
    <% @users.each do |user| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path user.photo.key %>)">
        <% if current_user.friends?(user) %>
          <%= link_to "Unfriend #{user.first_name}", friend_path(Friend.where(user: current_user, friend: user).or(Friend.where(user: user, friend: current_user)).first), method: :delete  %>
          <% else %>
          <%= link_to "Add #{user.first_name}" , user_friends_path(current_user, friend: user), method: :post %>
        <% end %>
       </div>
    <% end %>
  </div>
</div>
