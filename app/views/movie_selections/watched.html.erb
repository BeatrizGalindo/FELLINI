<div class="container">
  <!-- <h1>Already watched...</h1> -->
  <div class="row justify-content-center">
    <div class="div.col-md-6">
      <%= link_to 'Watchlist', movie_selections_path, class: "btn m-3 " %>
      <%= link_to  'Already watched', watched_movie_selections_path, class: "btn m-3 active-tab" %>
      <%= link_to  'Favourites', favourites_movie_selections_path, class: "btn m-3" %>
    </div>
  </div>
</div>


<div class= "smallcard-space">
  <div class="smallcards">

    <% @movie_selections.each do |movie_selection| %>
        <div class="smallcard-category relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path movie_selection.movie.poster.key %>)">

          <div class="absoluteheart">
            <%= link_to movie_selection_path(movie_selection, attribute: :favourite), method: :put do %>
              <div class="HeartAnimation iconstyle"></div>
            <% end %>
          </div>
          <%= link_to movie_path(movie_selection.movie), class: "abs-link" do %>
          <% end %>
        </div>


    <% end %>
  </div>
</div>
