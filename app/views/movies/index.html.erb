<div class= "card-space">
    <div class="cards">
    <% @movies.each do |movie| %>
        <%= link_to movie_path(movie) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster %>)">
          </div>
        <% end %>
    <% end %>
    </div>
  </div>
